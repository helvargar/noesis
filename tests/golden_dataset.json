    "tests": [
        {
            "id": "ART_01",
            "category": "ricerca_artista",
            "query": "Chi è Erler?",
            "expected_keywords": [
                "Giulio Ettore Erler",
                "Erler",
                "Oderzo"
            ],
            "forbidden_keywords": [
                "non ho trovato",
                "errore",
                "non sono riuscito"
            ],
            "expect_data": true,
            "description": "Ricerca parziale per cognome - deve trovare Giulio Ettore Erler"
        },
